<h1>Reset Tech Chair Password</h1>

<p style="margin-bottom: 25px;" class="center">Password must be at least 8 characters</p>

<%= form_with do |f| %>
  <%= f.label :password, style: "margin-right: 60px;" %>
  <%= f.password_field :password, size: 20, maxlength: 70, required: true %><br><br>
  <%= f.label :confirm_password, "Confirm Password" %>
  <%= f.password_field :confirm_password, size: 20, maxlength: 70, required: true %><br><br>
  <%= f.submit "Submit" %>
<% end %>

<%= link_to "Reset Password by Command Line", techchair_reset_password_path, style: "margin-top: 25px;" %>
